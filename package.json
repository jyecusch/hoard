  "private": false,
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:https": "next dev --turbopack --experimental-https -H 0.0.0.0",
    "dev:zero": "npx zero-cache-dev",
    "zero:generate": "npx drizzle-zero generate --schema ./src/db/schema.ts --output ./src/lib/zero-schema.ts",
