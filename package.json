    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.539.0",
    "multer": "^2.0.2",
    "nanoid": "^5.1.5",
    "next": "15.4.6",
    "pg": "^8.16.3",
    "qrcode": "^1.5.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-qr-code": "^2.0.18",
