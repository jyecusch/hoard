    "db:generate": "drizzle-kit generate --config=drizzle.config.ts",
    "db:migrate": "tsx ./src/db/migrate.ts",
    "db:seed": "tsx ./src/db/seed.ts",
    "auth:schema:generate": "npx @better-auth/cli@latest generate --output ./src/db/auth-schema.ts",
    "build": "next build",
    "start": "next start",
    "lint": "next lint"
  },
  "dependencies": {
